@model IEnumerable<GlobalCityManager.Models.Country>

<h1>@ViewData["Title"]</h1>

<table border="1">
    <tr>
        <th>Code</th>
        <th>Name</th>
        <th>Region</th>
        <th>NationalFlag</th>
        <th>Delete</th>
        <th>Edit</th>
        <th>Detail</th>
    </tr>
    @foreach (var country in Model) {
        <tr>
            <td>@country.Code</td>
            <td>@country.Name</td>
            <td>@country.Region</td>
            <td>@country.NationalFlag</td>
            <td>@Html.ActionLink("Delete", "Delete", new { id = country.Code })</td>
            <td>@Html.ActionLink("Edit", "Edit", new { id = country.Code })</td>
            <td>@Html.ActionLink("Detail", "ShowDetail", new { id = country.Code })</td>
        </tr>
    }
</table>
<h3>@Html.ActionLink("Add new country", "Create")</h3>