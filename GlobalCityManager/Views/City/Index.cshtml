@model IEnumerable<GlobalCityManager.Models.City>

<h1>@ViewData["Title"]</h1>

<table border="1">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Country Code</th>
        <th>District</th>
        <th>Population</th>
        <th>Delete</th>
        <th>Edit</th>
        </tr>
    @foreach (var city in Model)
    {
        <tr>
            <td>@city.Id</td>
            <td>@city.Name</td>
            <td>@city.CountryCode</td>
            <td>@city.District</td>
            <td>@city.Population</td>
            <td>@Html.ActionLink("Delete", "Delete", new { id = city.Id })</td>
            <td>@Html.ActionLink("Edit", "Edit", new { id = city.Id })</td>
            </tr>
    }
</table>
<h3>@Html.ActionLink("Add new city", "Create")</h3>